<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginBottom="8dp">
    <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="54dp" android:layout_height="54dp"
               android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
               android:contentDescription="@string/thumb" android:id="@+id/img_msg"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
               tools:srcCompat="@tools:sample/avatars"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
              android:background="@drawable/background_edittext_rounded"
              android:maxWidth="240dp" android:padding="8dp"
              android:id="@+id/txt_msg" android:text="@string/coming_soon"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/img_msg"
              app:layout_constraintTop_toTopOf="@id/img_msg"/>

</androidx.constraintlayout.widget.ConstraintLayout>